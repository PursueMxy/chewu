<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.order_detail_arrival.AddArrivalPictureActivity">

    <include layout="@layout/toolbar_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--section 1-->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_image_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tv_image_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.司机站在车前方车牌与车合影"
                    android:textColor="#424242"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_image_1_pick"
                    android:layout_width="135dp"
                    android:layout_height="94dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/order_detail_camera_bg"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_detail_camera"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_image_1" />


                <ImageView
                    android:id="@+id/iv_image_1_example"
                    android:layout_width="135dp"
                    android:layout_height="94dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="18dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/upload_sl_4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/iv_image_1_pick"
                    app:layout_constraintTop_toBottomOf="@+id/tv_image_1" />

            </android.support.constraint.ConstraintLayout>

            <!--section 2-->
            <LinearLayout
                android:id="@+id/cl_image_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="14dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_image_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="2.车辆如果有划痕，请拍照"
                    android:textColor="#424242"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:gravity="center"
                    android:text="无划痕"
                    android:textColor="#FF0000"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    app:layout_constraintRight_toRightOf="parent" />
                    <ImageView
                        android:id="@+id/iv_huahen_checked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/order_detail_scratch"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/id_RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

            </LinearLayout>

            <!--section 3-->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_image_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tv_image_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.请拍摄公里数和油表"
                    android:textColor="#424242"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_image_3_pick"
                    android:layout_width="135dp"
                    android:layout_height="94dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/order_detail_camera_bg"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_detail_camera"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_image_3" />


                <ImageView
                    android:id="@+id/iv_image_3_example"
                    android:layout_width="135dp"
                    android:layout_height="94dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="18dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/upload_sl_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/iv_image_3_pick"
                    app:layout_constraintTop_toBottomOf="@+id/tv_image_3" />

            </android.support.constraint.ConstraintLayout>

            <!--section 4-->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_image_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tv_image_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.请拍摄前大灯和刹车灯亮起的状态"
                    android:textColor="#424242"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_image_4_pick"
                    android:layout_width="135dp"
                    android:layout_height="94dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/order_detail_camera_bg"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_detail_camera"
                    app:layout_constraintTop_toBottomOf="@+id/tv_image_4" />


                <ImageView
                    android:id="@+id/iv_image_4_pick_2"
                    android:layout_width="135dp"
                    android:layout_height="94dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/order_detail_camera_bg"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_detail_camera"
                    app:layout_constraintLeft_toRightOf="@+id/iv_image_4_pick"
                    app:layout_constraintTop_toBottomOf="@+id/tv_image_4" />


                <ImageView
                    android:id="@+id/iv_image_4_example"
                    android:layout_width="135dp"
                    android:layout_height="94dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="18dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/upload_sl_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_image_4_pick" />

            </android.support.constraint.ConstraintLayout>


            <!--section 5-->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_image_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tv_image_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.请拍摄行驶证和保单的合照"
                    android:textColor="#424242"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_image_5_pick"
                    android:layout_width="135dp"
                    android:layout_height="94dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/order_detail_camera_bg"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_detail_camera"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_image_5" />


                <ImageView
                    android:id="@+id/iv_image_5_example"
                    android:layout_width="135dp"
                    android:layout_height="94dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="18dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/upload_sl_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/iv_image_5_pick"
                    app:layout_constraintTop_toBottomOf="@+id/tv_image_5" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#2B292A"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>