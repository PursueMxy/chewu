<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    tools:context="com.weimu.chewu.module.welcome.WelcomeActivity">

    <ImageView
        android:id="@+id/welcome_iv_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_bg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:id="@+id/iv_icon_2"
        android:layout_marginTop="140dp"
        android:src="@drawable/welcome_hongdian" />

    <ImageView
        android:id="@+id/iv_icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/welcome_hongdian" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="215dp"
        android:id="@+id/iv_icon_4"
        android:src="@drawable/welcome_lujing" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="168dp"
        android:id="@+id/iv_icon_5"
        android:src="@drawable/welcome_dingwei" />

    <RelativeLayout
        android:id="@+id/rl_icon_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="300dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/welcome_yuanquan" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/welcome_jiantou" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="华林车务"
        android:id="@+id/tv_name"
        android:textColor="@color/color_yellow"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="华林车务,让天下没有难做的车务"
        android:textColor="@color/color_yellow"
        android:textSize="18dp" />
    <!--<Button-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:gravity="center"-->
    <!--android:textColor="@color/white"-->
    <!--android:text="立即体验"-->
    <!--android:textSize="20dp"-->
    <!--android:background="@drawable/welcome_btn_bg"/>-->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="立即体验"
        android:layout_centerHorizontal="true"
        android:background="@drawable/welcome_btn_bg_1" />
</RelativeLayout>
