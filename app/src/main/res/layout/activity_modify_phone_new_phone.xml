<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context="com.weimu.chewu.module.login.ForgetPwdTip2Activity">
    <include
        layout="@layout/toolbar_primary"></include>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_888"
        android:textSize="20sp"
        android:text="您的新手机号码是？"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/margin_left_right"/>
    <TextView
        android:id="@+id/modify_phone_tv_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_888"
        android:textSize="16sp"
        android:text="更换手机号码后下次登录使用新手机号"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/margin_left_right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_normal_shape">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/login_phone" />

        <EditText
            android:id="@+id/modify_phone_et_phone"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:background="@color/colorTransparent"
            android:gravity="center_vertical"
            android:hint="@string/login_phone_hint"
            android:textSize="16sp" />
    </LinearLayout>
    <Button
        android:id="@+id/modify_phone_btn_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="26dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/forget_pwd_next"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:background="@drawable/btn_default_shape"/>
</LinearLayout>
