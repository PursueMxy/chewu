<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="11dp"
    android:background="@color/white"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="#69C072"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="最快"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="36dp"
        android:text="0分钟"
        android:textColor="#424242"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_first_step_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="步行0米"
        android:textColor="#424242"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toRightOf="@+id/tv_time" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bus_path_divider_circle"
        app:layout_constraintBottom_toBottomOf="@+id/tv_first_step_distance"
        app:layout_constraintLeft_toRightOf="@+id/tv_first_step_distance"
        app:layout_constraintTop_toTopOf="@+id/tv_first_step_distance" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="1元"
        android:textColor="#424242"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toRightOf="@+id/view_divider" />

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/bus_path_ic_border"
        android:drawableLeft="@drawable/bus_path_ic"
        android:drawablePadding="7dp"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="6dp"
        android:text="100路"
        android:textColor="#424242"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time" />

    <TextView
        android:id="@+id/tv_address_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:text="xx上车"
        android:textColor="#888888"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_line" />


    <View
        android:id="@+id/view_divider_v2"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bus_path_divider_circle"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_address_up"
        app:layout_constraintLeft_toRightOf="@+id/tv_address_up"
        app:layout_constraintTop_toTopOf="@+id/tv_address_up" />

    <TextView
        android:id="@+id/tv_station_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:text="共0站"
        android:textColor="#888888"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view_divider_v2"
        app:layout_constraintTop_toBottomOf="@+id/tv_line" />


    <TextView
        android:id="@+id/tv_station_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="100路"
        android:textColor="#888888"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_station_sum" />


    <View
        android:id="@+id/view_divider_v3"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bus_path_divider_circle"
        app:layout_constraintBottom_toBottomOf="@+id/tv_station_up"
        app:layout_constraintLeft_toRightOf="@+id/tv_station_up"
        app:layout_constraintTop_toTopOf="@+id/tv_station_up" />


    <TextView
        android:id="@+id/tv_station_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="即将到站"
        android:textColor="#FFA42C"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_station_up"
        app:layout_constraintLeft_toRightOf="@+id/view_divider_v3" />
</android.support.constraint.ConstraintLayout>